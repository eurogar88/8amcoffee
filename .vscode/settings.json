{
    // Auto fetch cada 2 minutos para detectar cambios remotos (como los JSON del bot)
    "git.autofetch": true,
    "git.autofetchPeriod": 120,
  
    // Despu√©s de cada commit, sincroniza con remoto
    "git.postCommitCommand": "sync",
  
    // Haz rebase (no merge) al hacer sync para mantener historial limpio
    "git.pullRebase": "interactive",
  
    // Si hay cambios sin guardar, los guarda temporalmente al hacer pull
    "git.autoStash": true
  }